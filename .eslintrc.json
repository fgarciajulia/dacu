{
    "root": true,
    "env": {
        "browser": true,
        "node": false,
        "commonjs": false,
        "es6": false
    },
    "parserOptions": {
        "ecmaVersion": 5,
        "sourceType": "script"
    },
    "globals": {
        "angular": true,
        "Highcharts": true,
        "gulp": true,
        "require": true,
        "$": true,
        "TweenLite": true,
        "TweenMax": true,
        "TimelineMax": true,
        "classie": true,
        "Linear": true,
        "Power1": true,
        "Power2": true,
        "Power4": true,
        "Back": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}